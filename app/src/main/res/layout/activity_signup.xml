<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loginLayout"
    tools:context="instagram.shalan.net.sayed.instagram.SignupActivity"
    android:background="@color/loginBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView

            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:src="@drawable/pp"
            />

        <EditText
            android:layout_marginTop="15dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/signupemailtxt"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:hint="Email"
            android:textColorHint="@color/lightGray"
            android:background="@drawable/whiteshadow"
            android:textAllCaps="false"
            />
        <EditText
            android:layout_marginTop="15dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/signupusertxt"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:hint="Usr Name"
            android:textColorHint="@color/lightGray"
            android:background="@drawable/whiteshadow"
            android:textAllCaps="false"
            />
        <EditText
            android:layout_marginTop="15dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/signuppasstxt"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:hint="Password"
            android:textColorHint="@color/lightGray"
            android:background="@drawable/whiteshadow"/>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"
    android:layout_marginRight="22dp"
    android:layout_marginLeft="22dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:id="@+id/insignupBtn"
            android:background="@android:color/transparent"
            android:textColor="@color/loginBackground"
            android:layout_gravity="center_horizontal"
            />
</android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

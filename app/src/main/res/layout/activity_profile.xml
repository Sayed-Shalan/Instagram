<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="instagram.shalan.net.sayed.instagram.ProfileActivity">

<android.support.design.widget.AppBarLayout

    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:id="@+id/appbar">
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/toolbar" >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:src="@drawable/instaword"/>
</android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

<LinearLayout
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    >
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="125dp">
    <ImageView
        android:id="@+id/ppImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/pc"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/borderpc"/>
    </FrameLayout>
    <TextView
        android:id="@+id/personname"
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:text="Name"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/loginBackground"
        android:textAlignment="center"
        android:textSize="18dp"/>
</LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical">
<LinearLayout

    android:layout_marginRight="7dp"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    >

        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/postsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/loginBackground"
                android:textSize="13dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Posts"
                android:textColor="@color/loginBackground"
                android:textSize="13dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/loginBackground"
                android:textSize="13dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Followers"
                android:textColor="@color/loginBackground"
                android:textSize="13dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/loginBackground"
                android:textSize="13dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Following"
                android:textColor="@color/loginBackground"
                android:textSize="13dp"
                android:textAlignment="center"/>
        </LinearLayout>
</LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="7dp">
            <Button
                android:id="@+id/editProfile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Edit Your Profile"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:background="@color/loginBackground"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/personstate"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Add your State"
                android:layout_marginTop="26dp"
                android:textColor="@color/loginBackground"/>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="216dp">
<android.support.design.widget.TabLayout
    android:id="@+id/tabLayout"
    app:tabTextColor="@color/loginBackground"
    app:tabSelectedTextColor="@color/colorAccent"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tabIndicatorColor="@color/colorPrimaryDark"
>
</android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewPager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v4.view.ViewPager>


</LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/logoutBtn"
        app:elevation="6dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:rippleColor="@android:color/white"
        app:backgroundTint="@color/loginBackground"
        android:src="@drawable/fab_icon"
        android:layout_gravity="bottom|right"
        android:layout_height="wrap_content" />
</android.support.design.widget.CoordinatorLayout>

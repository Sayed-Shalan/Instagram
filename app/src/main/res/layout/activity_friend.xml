<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="instagram.shalan.net.sayed.instagram.ProfileActivity">
    <android.support.design.widget.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/apll">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tokolbar" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/instaword"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            >
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="125dp">
                <ImageView
                    android:id="@+id/FriendPp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/pc"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/borderpc"/>
            </FrameLayout>
            <TextView
                android:id="@+id/Friendname"
                android:layout_width="140dp"
                android:layout_height="25dp"
                android:text="Name"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/loginBackground"
                android:textAlignment="center"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical">
            <LinearLayout

                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/postsCountf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/loginBackground"
                        android:textSize="13dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Posts"
                        android:textColor="@color/loginBackground"
                        android:textSize="13dp"
                        android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/loginBackground"
                        android:textSize="13dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Followers"
                        android:textColor="@color/loginBackground"
                        android:textSize="13dp"
                        android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/loginBackground"
                        android:textSize="13dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Following"
                        android:textColor="@color/loginBackground"
                        android:textSize="13dp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="7dp">
                <Button

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:background="@color/loginBackground"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/Friendstate"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Add your State"
                android:layout_marginTop="26dp"
                android:textColor="@color/loginBackground"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="230dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView4">

    </android.support.v7.widget.RecyclerView>
</android.support.design.widget.CoordinatorLayout>
